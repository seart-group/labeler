<header class="mb-3">
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a href="https://seart.si.usi.ch" target="_blank" class="navbar-brand logo">
                <span class="logo-box">SE</span><span class="logo-text">ART</span>
            </a>
            <button type="button"
                    class="navbar-toggler"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbar"
                    aria-controls="navbar"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <%
                        const links = [
                            "/instances",
                            "/conflicts",
                            "/labels",
                            "/progress",
                            "/export"
                        ];
                        links.forEach((link) => {
                            const name = link.charAt(1).toUpperCase() + link.substring(2);
                            const classes = link === locals.path ? "nav-link active" : "nav-link";
                    %>
                        <li class="nav-item">
                            <a class="<%- classes %>" href="<%- link %>"><%- name %></a>
                        </li>
                    <%
                        });
                    %>
                </ul>
                <% if (!!locals.reviewer) { %>
                    <div class="py-2 ms-lg-auto">
                        <i class="bi bi-person-fill"></i>
                        <span><%- locals.reviewer.name %></span>
                    </div>
                    <div class="vr d-none d-lg-inline-block mx-lg-2"></div>
                    <div class="py-2">
                        <span><i class="bi bi-eye-fill" title="Reviewed Instances"></i></span>
                        <span class="font-monospace">
                            <%- locals.reviewer.review_progress || 0 %>
                        </span>
                    </div>
                    <div class="vr d-none d-lg-inline-block mx-lg-2"></div>
                    <div class="py-2">
                        <span><i class="bi bi-trash-fill" title="Discarded Instances"></i></span>
                        <span class="font-monospace">
                            <%- locals.reviewer.discard_progress || 0 %>
                        </span>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>
</header>